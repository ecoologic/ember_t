<article class='task'>
  <header>
    <h2>{{name}}</h2>
  </header>
  <blockquote class='description well'>
    {{md description}}
  </blockquote>
  <div class='activities'>
    {{#each activities}}
      {{render 'activity' this}}
    {{else}}
      <p class='empty well well-small'>There is no activity yet</p>
    {{/each}}

    {{view App.ActivityFormView}}
  </div>
</article>
